@model Bloggie.Models.Domain.Tag;
@{
    ViewData["Title"] = "Edit Tag";
}

<div class="bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>

    <div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="Id" asp-for="Id" readonly/>
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" class="form-control" id="displayName" asp-for="DisplayName"/>
            </div>

            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button type="submit" class="btn btn-danger mx-3" asp-area="" asp-controller="AdminTags" asp-action="Delete" asp-route-id="Id">Delete</button>
                </div>
            </div>
        </form>
    </div>
    
</div>