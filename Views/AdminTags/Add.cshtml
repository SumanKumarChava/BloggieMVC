@model Bloggie.Models.ViewModels.AddTagRequest;
@{
    ViewData["Title"] = "Add Tag";
}


<div class="bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
    
    <div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" class="form-control" id="displayName" asp-for="DisplayName"/>
            </div>
            
            <button type="submit" class="btn btn-dark">Submit</button>

        </form>
    </div>
</div>